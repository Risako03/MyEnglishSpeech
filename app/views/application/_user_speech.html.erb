<div class="row">
  <div class="col-12">
    <h2 class="text-center"> <%= speech.user.teacher? ? "Teacher speech" : "Student speech" %></h2>
  </div>
</div>
<div class="row" style="position:relative;">
  <div class="col col-md-4">
  </div>
</div>
<div class="row py-2">
  <div class="col col-12 col-md-4 text-center" style="position:relative;">
    <%= cl_image_tag speech.user.photo.key, class: "avatar-large", style: "position:absolute;left:0;top:0;" %>
    <h5 class="fw-bold">Speech audio <%= link_to "", speech_path(speech), data: { confirm: "Delete speech?" }, method: :delete, class: "far fa-trash-alt text-black" %></h5>
    <p class="text-left" style="">Speech by <%= speech.user.first_name%> </p>
    <div class="d-flex align-items-center">
      <audio controls src="https://res.cloudinary.com/dqco8z2dj/video/upload/<%= Rails.env %>/<%= speech.audio.key %>.webm"> </audio>
    </div>
    <% if current_user == speech.user && !current_user.teacher %>
      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'speech_id', speech.id %>
        <%= submit_tag 'Make payment', class: "btn btn-primary my-3", style: "color:white;", id: "pay" %>
      <% end %>
    <% end %>
  </div>
  <div class="col col-12 col-md-4 text-center">
    <h5 class="fw-bold">Transcript
      <% if current_user == speech.user %>
        <i class="fas fa-pencil-alt" data-bs-toggle="modal" data-bs-target="#speech_transcript_<%=speech.id%>"></i>
      <% end %>
    </h5>
    <%= render 'speeches/edit_modal', id: "speech_transcript_#{speech.id}", speech: speech, transcript: true  %>
    <div class="w-100 overflow-auto my-2 bg-white"><%= speech.transcript %></div>
  </div>
  <div class="col col-12 col-md-4 text-center">
    <h5 class="fw-bold">Notes
      <% if current_user == speech.user %>
        <i class="fas fa-pencil-alt" data-bs-toggle="modal" data-bs-target="#speech_notes_<%=speech.id%>"></i>
      <% end %>
    </h5>
    <%= render 'speeches/edit_modal', id: "speech_notes_#{speech.id}", speech: speech, transcript: false  %>
    <div class="w-100 overflow-auto my-2 bg-white"><%= speech.notes %></div>
  </div>
</div>
