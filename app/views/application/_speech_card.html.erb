<div class="card-product flex-container my-5">
  <img src="https://www.nicepng.com/png/full/131-1314805_radio-spot-icon-mike-icons.png" />
  <div class="flex-item">
    <a href="http://[::1]:3000/speeches/<%= speech.id %>" class="btn btn-primaly">
      <h2>Title</h2>
    </a>
    <p><%= speech.title %></p>
  </div>
  <div class="flex-item">
    <h2>Teacher</h2>
    <p><%= speech.user.first_name %> <%= speech.user.last_name %></p>
  </div>
  <div class="flex-item">
    <h2>Recording time</h2>
    <p>00:10</p>
  </div>
  <div class="flex-item">
    <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="avatar" />
  </div>
</div>
